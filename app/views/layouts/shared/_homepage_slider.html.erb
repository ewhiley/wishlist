        <%= link_to "Make a wishlist", new_wishlist_path, class: "btn btn-succes btn-yellow button" %>
      </div>
    <% end %>
  </div>

  <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag("slide_1.jpg", class: "slides") %>
      </div>
  </div>
  </div>
  <%= image_tag("slide_1.jpg", class:"banner-image") %>

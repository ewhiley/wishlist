<div class="banner">
  <div class="banner-ad">
  </div>
</div>
<p class="home">All Products</p>
<% if user_signed_in? == false %>
  <div class="row cards index-products">
    <% @products.each do |product| %>
      <% if product.sold == false %>    
        <div class="col-sm-3">
          <div class="card card2">
            <% if product.images.any? %>
              <%= image_tag product.images.first, class: "card-img-top thumbnail" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">$<%= '%.2f' % product.price %></p>
              <%= link_to "Checkout Now", new_user_registration_path, class: "btn btn-succes btn-yellow" %>
            </div>
          </div>
        </div>
      <% end %>
    <%end %>
    <div class="banner-ad2">
    </div>
  </div>
  <div class="product-not-found">
    <div class="left">
      <p class="product-not-found-title">Don't see what you need?</p>
      <p class="product-not-found-text">Sometimes we can't find what we're looking for. That's OK!</p>
      <p class="product-not-found-text">With <span class="mini-wishlist">Wishlist</span> we match you with products that fit your search.</p>
      <p class="product-not-found-text">It's really easy. Make a Wishlist now!</p>
    </div>
    <div class="right">
      <%= link_to "Make a wishlist", new_user_registration_path, class: "btn btn-succes btn-yellow" %>
    </div>
  </div>
<% elsif user_signed_in? == true %>
  <div class="row cards index-products">
    <% @products.each do |product| %>
      <% if product.sold == false && product.user_id != current_user.id%>
        <div class="col-sm-3">
          <div class="card card2">
            <% product.images.each do |image| %>
              <%= image_tag image, class: "card-img-top thumbnail" %>
            <% end %>
            <div class="card-body">
              <h4 class="card-title"><%= product.name %></h4>
              <p class="card-text">$<%= '%.2f' % product.price %></p>
              <%= link_to "Checkout Now", purchase_no_wishlist_path(product), class: "btn btn-succes btn-yellow" %>
            </div>
          </div>
        </div>
      <% end %>
    <%end %>
    <div class="banner-ad2">
    </div>
  </div>
  <div class="product-not-found">
    <div class="left">
      <p class="product-not-found-title">Don't see what you need?</p>
      <p class="product-not-found-text">Sometimes we can't find what we're looking for. That's OK!</p>
      <p class="product-not-found-text">With <span class="mini-wishlist">Wishlist</span> we match you with products that fit your search.</p>
      <p class="product-not-found-text">It's really easy</p>
    </div>
    <div class="right">
      <%= link_to "Make a wishlist", new_wishlist_path, class: "btn btn-succes btn-yellow" %>
    </div>
  </div>
<% end %>




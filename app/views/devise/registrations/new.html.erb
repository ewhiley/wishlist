<div class="container signup-container">
  <p class="page-title less-margin-top">Sign up</p>
  <div class="signup-page">
    <div class="signup-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field top-field form-group">
          <%= f.label :email, class: "field" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signup-input" %>
        </div>

        <div class="field form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "signup-input" %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signup-input" %>
        </div>

        <div class="actions signup-button">
          <%= f.submit "Sign up", class: "btn my-2 my-sm-0 skinny-button btn-yellow" %>
        </div>
      <% end %>  
    </div>
    <div class="or-box">
      <div class="or">
        <hr class="signup-line">
        <p>OR</p>
        <hr class="signup-line">
      </div>
    </div>
    <div class="login">
      <%= link_to "Login", new_user_session_path, class: "btn my-2 my-sm-0 btn-lg btn-yellow btn-login" %>
    </div>
  </div> 
</div>  

  <%#= render "devise/shared/links" %>

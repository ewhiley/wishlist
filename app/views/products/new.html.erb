<p class="new-product-title">New Product</p>
<div class="new-product-form">
  <%= form_with model: @product, local: true  do |form| %>
    <div class="form-group">
      <%= form.label :name, "Product Name" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control", rows: "6" %>
    </div>
    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field(:price, min: 1.00, step: 0.01, class: "form-control")%>
    </div>
    <div class="form-group-images">
      <%= form.label :images %>
      <%= form.file_field :images, multiple: true %>
    </div>
    <div class="form-group-categories">
      <%= form.label :category_ids, "Categories" %>
      <%= form.select :category_ids,
        Category.all.map { |k| [k.name, k.id] },
                        { include_blank: true },
                        { :multiple => true, class: 'chosen-select' }
      %>
    </div>
    <%= form.submit %>
  <% end %>
</div>